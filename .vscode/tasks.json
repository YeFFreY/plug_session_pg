{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "command": "mix",
  "presentation": {
    "echo": true,
    "reveal": "always",
    "focus": false,
    "panel": "shared"
  },
  "tasks": [
    {
      "type": "shell",
      "label": "compile",
      "problemMatcher": [
        "$mixCompileError",
        "$mixCompileWarning"
      ],
    },
    {
      "type": "shell",
      "label": "test",
      "problemMatcher": [
        "$mixCompileError",
        "$mixCompileWarning",
        "$mixTestFailure"
      ],
    }
  ]
}